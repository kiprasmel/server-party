{
	"name": "server-party",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "run-p watch:tailwind watch:react",
		"watch:tailwind": "postcss -w src/styles/styles.css -o src/styles/styles.generated.css",
		"watch:react": "react-scripts start",
		"build": "yarn build:tailwind && yarn build:react",
		"build:tailwind": "postcss src/styles/styles.css -o src/styles/styles.generated.css",
		"build:react": "react-scripts build",
		"test": "react-scripts test --env=jest-environment-jsdom-sixteen",
		"eject": "react-scripts eject",
		"lint": "    eslint . --ext js,jsx,ts,tsx",
		"lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
		"predeploy": "yarn lint:fix && yarn test && yarn build",
		"deploy": "yarn netlify deploy"
	},
	"eslintConfig": {
		"extends": "eslint-config-sarpik"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@testing-library/jest-dom": "^5.9.0",
		"@testing-library/react": "^10.2.1",
		"@testing-library/user-event": "^11.2.1",
		"@types/history": "^4.7.6",
		"@types/jest": "^24.0.0",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.5",
		"axios": "^0.19.2",
		"history": "^4.10.1",
		"netlify-cli": "^2.53.0",
		"postcss-import": "^12.0.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "^3.4.1",
		"typescript": "^3.9.5"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.2.0",
		"@typescript-eslint/eslint-plugin": "^2.11.0",
		"@typescript-eslint/parser": "^2.11.0",
		"autoprefixer": "^9.8.0",
		"babel-eslint": "^10.0.3",
		"eslint": "6.x",
		"eslint-config-airbnb": "^18.0.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-config-sarpik": "0.2.7",
		"eslint-plugin-flowtype": "^4.5.2",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-import": "^2.18.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-monorepo": "^0.2.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-react": "^7.14.2",
		"eslint-plugin-react-hooks": "^2.3.0",
		"esprima": "^4.0.1",
		"jest-environment-jsdom-sixteen": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.1",
		"prettier": "^1.16.4",
		"tailwindcss": "^1.4.6"
	}
}
